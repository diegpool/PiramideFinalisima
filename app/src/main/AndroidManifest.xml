<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.diego.piramidefinalisima">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logotarea3"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logotarea3"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"> >
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="com.example.diego.MainActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".Menu"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Instrucciones"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="com.example.diego.Instrucciones" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".Ganar"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="com.example.diego.Ganar" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>


</manifest>